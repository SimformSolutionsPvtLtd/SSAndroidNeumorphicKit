<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicCardView
        android:id="@+id/neumorphicCardView"
        style="@style/Widget.SSNeumorphic.CardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:id="@+id/neumorphicEditText"
        style="@style/Widget.SSNeumorphic.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:hint="Password"
        app:ss_neumorphic_shapeAppearance="@style/ShapeAppearance.RoundRect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphicCardView" />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicButton
        android:id="@+id/neumorphicButton"
        style="@style/Widget.SSNeumorphic.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="Neumorphic Button"
        android:textAllCaps="false"
        app:ss_neumorphic_shapeAppearance="@style/ShapeAppearance.RoundRect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphicEditText" />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicFloatingActionButton
        style="@style/Widget.SSNeumorphic.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:minWidth="88dp"
        android:minHeight="88dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neumorphicButton" />

</androidx.constraintlayout.widget.ConstraintLayout>