<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.SSNeumorphic.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ShapeAppearance.TabFirstButton">
        <item name="ss_neumorphic_cornerFamily">rounded</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
        <item name="ss_neumorphic_cornerRadiusTopLeft">6dp</item>
        <item name="ss_neumorphic_cornerRadiusBottomLeft">6dp</item>
    </style>

    <style name="ShapeAppearance.TabMiddleButton">
        <item name="ss_neumorphic_cornerFamily">rounded</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
    </style>

    <style name="ShapeAppearance.TabEndButton">
        <item name="ss_neumorphic_cornerFamily">rounded</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
        <item name="ss_neumorphic_cornerRadiusTopRight">6dp</item>
        <item name="ss_neumorphic_cornerRadiusBottomRight">6dp</item>
    </style>

    <style name="ShapeAppearance.Circular">
        <item name="ss_neumorphic_cornerFamily">oval</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
    </style>

    <style name="ShapeAppearance.Rect">
        <item name="ss_neumorphic_cornerFamily">rounded</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
    </style>


    <style name="ShapeAppearance.ImageRounded">
        <item name="ss_neumorphic_cornerFamily">rounded</item>
        <item name="ss_neumorphic_cornerRadius">0dp</item>
        <item name="ss_neumorphic_cornerRadiusTopLeft">16dp</item>
        <item name="ss_neumorphic_cornerRadiusBottomLeft">16dp</item>
    </style>

</resources>