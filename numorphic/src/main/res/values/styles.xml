<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.Numorph" />

    <style name="Widget.Numorph.Button" parent="android:Widget.Button">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/default_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/default_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/default_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/default_button_padding_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_numorph</item>
        <item name="numorph_backgroundColor">@color/background</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_shadowElevation">@dimen/default_shadow_elevation</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.Button</item>
    </style>

    <style name="Widget.Numorph.CardView" parent="android:Widget">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_backgroundColor">@color/background</item>
        <item name="numorph_shadowElevation">@dimen/default_shadow_elevation</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.CardView</item>
    </style>

    <style name="Widget.Numorph.FloatingActionButton" parent="android:Widget">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_numorph</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_backgroundColor">@color/background</item>
        <item name="numorph_shadowElevation">@dimen/default_shadow_elevation</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.FloatingActionButton</item>
    </style>
    
    <style name="Widget.Numorph.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_numorph</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_shadowElevation">6dp</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.ImageButton</item>
    </style>

    <style name="Widget.Numorph.ImageView" parent="android:Widget">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_shadowElevation">@dimen/default_shadow_elevation</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.ImageView</item>
    </style>

    <style name="Widget.Numorph.EditText" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/default_edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/default_edit_text_padding_vertical</item>
        <item name="android:paddingStart">@dimen/default_edit_text_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/default_edit_text_padding_horizontal</item>
        <item name="numorph_inset">@dimen/default_inset</item>
        <item name="numorph_backgroundColor">@color/background</item>
        <item name="numorph_shadowElevation">@dimen/default_shadow_elevation</item>
        <item name="numorph_shadowColorLight">?colorShadowLight</item>
        <item name="numorph_shadowColorDark">?colorShadowDark</item>
        <item name="numorph_shapeType">flat</item>
        <item name="numorph_shapeAppearance">@style/ShapeAppearance.Numorph.EditText</item>
    </style>
    
    <style name="ShapeAppearance" />

    <style name="ShapeAppearance.Numorph" />

    <style name="ShapeAppearance.Numorph.Button" parent="">
        <item name="numorph_cornerFamily">rounded</item>
        <item name="numorph_cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Numorph.CardView" parent="">
        <item name="numorph_cornerFamily">rounded</item>
        <item name="numorph_cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Numorph.FloatingActionButton" parent="">
        <item name="numorph_cornerFamily">oval</item>
        <item name="numorph_cornerRadius">@dimen/default_floating_action_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Numorph.ImageButton" parent="">
        <item name="numorph_cornerFamily">rounded</item>
        <item name="numorph_cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Numorph.ImageView" parent="">
        <item name="numorph_cornerFamily">rounded</item>
        <item name="numorph_cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Numorph.EditText" parent="">
        <item name="numorph_cornerFamily">rounded</item>
        <item name="numorph_cornerRadius">@dimen/default_corner_radius</item>
    </style>
</resources>